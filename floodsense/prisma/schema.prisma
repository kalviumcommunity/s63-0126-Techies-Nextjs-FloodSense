generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password      String
  createdAt     DateTime @default(now())
  alertsCreated Alert[]

  @@index([email])
}

model District {
  id        String   @id @default(uuid())
  name      String   @unique
  state     String
  country   String   @default("IN")
  createdAt DateTime @default(now())
  alerts    Alert[]

  @@index([name])
  @@index([state])
}

model Alert {
  id         String        @id @default(uuid())
  title      String
  message    String
  severity   AlertSeverity
  status     AlertStatus   @default(PENDING)
  districtId String
  createdBy  String
  issuedAt   DateTime      @default(now())
  resolvedAt DateTime?
  creator    User          @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  district   District      @relation(fields: [districtId], references: [id], onDelete: Cascade)

  @@index([districtId])
  @@index([createdBy])
  @@index([issuedAt])
  @@index([status])
}

enum AlertSeverity {
  LOW
  MODERATE
  HIGH
  SEVERE
}

enum AlertStatus {
  PENDING
  ACTIVE
  RESOLVED
}
